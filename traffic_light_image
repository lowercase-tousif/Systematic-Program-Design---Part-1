#reader(lib "htdp-beginner-reader.ss" "lang")((modname traffic_light_image) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
(require 2htdp/image)

(define red-light (circle 20 "solid" "red"))
(define yellow-light (circle 20 "solid" "yellow"))
(define green-light (circle 20 "solid" "green"))

(define traffic-light (above red-light yellow-light green-light))

traffic-light